//Resets
[contenteditable="true"]:active,
[contenteditable="true"]:focus
  border:none;
  outline:none;

body
  font-smoothing antialiased !important
#login-buttons a, .accounts-dialog a
  text-decoration none
.nav a.page-link
  text-transform capitalize
.navbar
  margin-bottom: 14px;
  .nav > li > a
    font-weight normal
  .brand
    font-weight normal
footer
  text-align center

.login-link-and-dropdown-list
  //font-weight bold

.modern-pics
  font-family 'ModernPictogramsNormal'
.dropdown .modern-pics
  font-size: 18px
  font-weight: normal

.well
  min-height: 20px;
  padding: 19px;
  margin-bottom: 20px;
  background-color: whiteSmoke;
  border: 1px solid #E3E3E3;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
  -moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);

//Create a Tune page
.vex-canvas
  float: left;
  width: 576px;
div.vex-tabdiv .editor
  display none
.CodeMirror
  margin-left: 12px
  width: 316px
  height 500px
  padding 4px
  float left
  border 1px solid #c5c5c5
  box-shadow inset 0 0 8px rgba(0, 0, 0, 0.14);
.activeline 
  background: white !important
  border-radius 4px
.CodeMirror-selected
  background: #FF6600 !important
.editor-error
  display: none
.tab-container
  .btn-toolbar
    margin-top 0
    margin-bottom -1px
    .btn-group
      margin-left -1px
      &:first-child
        margin-left 12px
        .btn
          border-top-left-radius 5px
      &:last-child
        .btn
          border-top-right-radius 5px


