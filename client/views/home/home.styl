.main-container
  margin-left: 158px
  border: 1px solid #e2e2e2
  background-color: white
  width: 700px
  .top-block
    border-bottom: 1px solid #e2e2e2
    padding: 2px 6px
  .bottom-block
    .left
      border-right: 1px solid #e2e2e2
      float: left
      width: 324px
      padding: 2px 6px
    .right
      margin-left: 340px
      padding: 2px 6px

.item
  float: left
  width: 300px
  height: 30px
  margin-bottom: 16px
  .content
    margin-left: 30px
    .title
      display: block
      font-weight: bold
      white-space:nowrap;
      overflow: hidden
    .views
      float: right
      color: gray
      font-size: 12px
    .user
      color: gray
      font-size: 12px
      a
        color: gray
        &:hover
          text-decoration: underline