.roadmap
  .dual
    td
      width: 540px
      padding: 18px
      padding-top: 4px
      vertical-align: top
      &:first-child
        border-right: 10px dashed #e0e0e0
        h2
          text-align: right
        p 
          margin-left: 30px
          border-right: 6px solid #E69F97
          &:hover
            border-right: 6px solid #d9230f
          .controls
            left: -20px
      &:last-child
        border-left: 10px dashed #e0e0e0
        p 
          margin-right: 30px
          border-left: 6px solid #E69F97
          &:hover
            border-left: 6px solid #d9230f
          .controls
            right: -20px
      h2
        margin: 0
      p
        margin: 12px 0
        background-color: white
        padding: 6px
        position: relative
        .controls
          display: block
          background-color: white
          position: absolute
          top: 0px
          width: 16px
          padding: 2px
          i
            cursor: pointer
            &:hover
              opacity: 1.0