//Resets
[contenteditable="true"]:active,
[contenteditable="true"]:focus
  border:none;
  outline:none;

body
  font-smoothing antialiased !important
  a
    color: #d9230f
#login-buttons a, .accounts-dialog a
  text-decoration none
.nav
  li
    line-height: 34px
  a.page-link
    text-transform capitalize
.nav.lang-menu
  margin-top: 5px
  li > a
    line-height 25px
.navbar
  margin-bottom: 14px;
  .navbar-text
    line-height: 23px;
  .navbar-inner
    height: 48px;
    line-height: 24px;
    .form-search
      padding-top 10px
  .nav > li > a
    font-weight normal
    padding-top 8px
  .brand
    font-weight normal
    color #d9230f
    margin-right 36px
    position: relative
    .alpha-note
      color: black
      text-shadow: none
      position: absolute
      left: 90px
      top: 16px
      font-size: 10px
      text-transform: uppercase
footer
  text-align center

.login-link-and-dropdown-list
  //font-weight bold
#login-buttons .login-button, .accounts-dialog .login-button
  background-color: white;
  background-image: -moz-linear-gradient(top, #C9A5A5, #955959);
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#C9A5A5), to(#955959));
  background-image: -webkit-linear-gradient(top, #C9A5A5, #955959);
  background-image: -o-linear-gradient(top, #C9A5A5, #955959);
  background-image: linear-gradient(to bottom, #C9A5A5, #955959);

.modern-pics
  font-family 'ModernPictogramsNormal'
.dropdown .modern-pics
  font-size: 18px
  font-weight: normal

.well
  min-height: 20px;
  padding: 19px;
  margin-bottom: 20px;
  background-color: whiteSmoke;
  border: 1px solid #E3E3E3;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
  -moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);

.container-padder
  margin 0 30px
  .row
    margin 0 0px
    min-height: 600px

.hidden
  display: none
.panel-text
  text-transform: uppercase
  font-size: 12px
  font-weight: bold
.holder
  background-color: white
  border: 1px solid #bbb
  box-shadow: 0 0 8px rgba(0, 0, 0, 0.2)
.common-page
  margin-left: 20px
  width: 880px

//Shared templates
#myModal
  width: 900px
  margin-left: -450px
  textarea
    width: 92%
    min-height: 260px

